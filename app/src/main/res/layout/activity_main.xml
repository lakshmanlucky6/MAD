<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".MainActivity">
    <Button android:id="@+id/btn_pick_time"
        android:layout_width="260dp"
        android:layout_height="94dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="176dp"
        android:onClick="btn_pick_time"
        android:text="TIME PICK"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_pick_date" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.469" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button android:id="@+id/btn_pick_date"
        android:layout_width="253dp"
        android:layout_height="86dp"
        android:layout_marginStart="135dp"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="156dp"
        android:layout_marginBottom="409dp"
        android:onClick="btn_pick_date" android:text="DATE PICK"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.449"
        app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/btn_pick_time" app:layout_constraintVertical_bias="1.0" />
    <Button android:id="@+id/btn_show_dialog"
        android:layout_width="339dp"
        android:layout_height="95dp"
        android:layout_marginStart="146dp"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="174dp"
        android:layout_marginBottom="259dp"
        android:onClick="btn_show_dialog"
        android:text="SHOW DIALOG"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.403" app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_pick_date" app:layout_constraintVertical_bias="1.0" />
    <Button android:id="@+id/show_custom_dialog"
        android:layout_width="344dp" android:layout_height="103dp"
        android:layout_marginStart="155dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="165dp"
        android:layout_marginBottom="155dp"
        android:onClick="show_custom_dialog" android:text="Custom
Dialog" android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_show_dialog" app:layout_constraintVertical_bias="0.253" />
</androidx.constraintlayout.widget.ConstraintLayout>